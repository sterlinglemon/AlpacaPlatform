    <script>
      function orderTypeChanged(){
          orderType = document.getElementById('submit_order_type').value;
          if (orderType == "limit") {
              $('#limit_price').removeAttr('disabled');
              $('#stop_price').attr({
                  'disabled': 'disabled'
              });
          }
          else if (orderType == "stop_limit") {
              $('#limit_price').removeAttr('disabled');
              $('#stop_price').removeAttr('disabled');
          }
          else if (orderType == "stop") {
              $('#stop_price').removeAttr('disabled');
              $('#limit_price').attr({
                  'disabled': 'disabled'
              });
          }
          else {
              $('#stop_price').attr({
                  'disabled': 'disabled'
              });
              $('#limit_price').attr({
                  'disabled': 'disabled'
              });
          }
      }
    </script>
